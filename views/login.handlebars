<div class="login-containers">
    <div class="login-container">
      <form class="login-form">
        <h2>Login</h2>
        <input type="text" class="form-control" placeholder="Username or Email" id="email-login" required>
        <input type="password" class="form-control" placeholder="Password" id="password-login" required>
        <button type="submit" class="login-button">Log In</button>
      </form>
    </div>
    <div class="login-container">
      <form class="signup-form">
        <h2>Create Account</h2>
        <input type="text" class="form-control" placeholder="Choose a Username" id="username-signup" required>
        <input type="email" class="form-control" placeholder="Email Address" id="email-signup" required>
        <input type="password" class="form-control" placeholder="Create a Password" id="password-signup" required>
        <button type="submit" class="login-button">Create Account</button>
      </form>
    </div>

<script src="./js/login.js"></script>